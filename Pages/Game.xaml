<Page x:Class="MathMastermind.Pages.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MathMastermind.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Game">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label Content="Oblicz wyrażenie" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" />
        <Label x:Name="Expression" Content="2 + 2" Foreground="White" FontSize="50" FontWeight="Bold" HorizontalAlignment="Center" />
        <TextBox Style="{DynamicResource TextBoxStyle1}" x:Name="UserAnswer" FontWeight="Medium" Background="#3A4249" Width="250" BorderBrush="Transparent"  Foreground="White" FontSize="17" Padding="12,12,12,12" Margin="0,20,0,0" TextChanged="UserAnswer_TextChanged"  />
        <Button Style="{DynamicResource ButtonStyle1}" Content="Sprawdź" Padding="20,10,20,10" Margin="0,15,0,0" Background="#FF3E7DBC" Foreground="White" FontSize="15" FontWeight="SemiBold" BorderBrush="{x:Null}" Cursor="Hand" />
    </StackPanel>
</Page>
